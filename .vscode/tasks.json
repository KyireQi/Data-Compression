{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "G:\\Mingw\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "-fdiagnostics-color=always",
                "${workspaceFolder}\\**.cpp",   //${workspaceFolder}表示.vscode所在的那个文件夹的路径
                "-o",
                "${workspaceFolder}\\${fileBasenameNoExtension}",
                "-std=c++11"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}